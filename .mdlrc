# MarkdownLint configuration file

# Exclude rules
exclude_rule 'MD013'  # Line length
exclude_rule 'MD024'  # Multiple headers with the same content
exclude_rule 'MD033'  # Inline HTML

# Customize rules
rule 'MD004', :style => 'dash'  # Use dash for unordered list style
rule 'MD007', :indent => 4      # Indentation for list items

# Additional options
all

